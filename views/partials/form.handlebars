
        <form method='POST'>

                <div class="form">

                        {{#if login}}
        
                                {{#if signup}}
                                <input type='text' name='first' placeholder='First Name' autocomplete='off'>
                                <input type='text' name='last' placeholder='Last Name' autocomplete='off'>
                                {{/if}}

                                <input type='email' name='email' placeholder='E Mail' autocomplete='off'>
                                <input type='password' name='pass' placeholder='Password' autocomplete='off'>

                                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                                <button id="btn">{{#if signup}}Sign Up{{else}}login{{/if}}</button>

                        {{/if}}
                </div>

                <div class="form-profile">

                {{#if profile}}

                        <input type="number" min="18" max="100" name="age" placeholder="Age">
                        <input type="text" name="city" placeholder="City">
                        <input type="text" name="url" placeholder="https://example.com">

                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        
                        <button type="submit" id="btn">Continue</button>

                {{/if}}

                {{#if edit}}

                {{#rows}}

                        <input type='text' name='first' placeholder='First Name' value='{{first}}' autocomplete='off'>
                        <input type='text' name='last' placeholder='Last Name' value='{{last}}'autocomplete='off'>
                        <input type='email' name='email' placeholder='E Mail' value='{{email}}' autocomplete='off'>
                        <input type='password' name='pass' placeholder='Password' autocomplete='off'>
                        <input type="number" name="age" value='{{age}}' placeholder="Age">
                        <input type="text" name="city" value='{{city}}' placeholder="City">
                        <input type="text" name="url" value='{{url}}' placeholder="https://example.com">

                {{/rows}}
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button type="submit" id="btn">Update your Data</button>

                {{/if}}

                </div>


        </form>
